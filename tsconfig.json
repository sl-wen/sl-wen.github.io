{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./static/js/dist",
    "rootDir": "./",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["static/js/**/*"],
  "exclude": ["node_modules", "static/js/dist"]
}